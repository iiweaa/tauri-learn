{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "我的TAURI学习应用",
  "version": "1.0.0",
  "identifier": "com.xiaoding.tauri-learning-app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "主窗口",
        "width": 1200,
        "height": 800,
        "minWidth": 500,
        "minHeight": 400,
        "center": true,
        "closable": true
      },
      {
        "label": "secondary",
        "title": "辅助窗口",
        "width": 800,
        "height": 600,
        "minWidth": 400,
        "minHeight": 300,
        "center": true,
        "visible": false,
        "closable": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
